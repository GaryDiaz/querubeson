---
import Blog from "./icons/Blog.astro";
import Close from "./icons/Close.astro";
import Construction from "./icons/Construction.astro";
import Contact from "./icons/Contact.astro";
import Event from "./icons/Event.astro";
import Group from "./icons/Group.astro";
import Information from "./icons/Information.astro";
import Menu from "./icons/Menu.astro";
import Video from "./icons/Video.astro";

const iconMap = {
  blog: Blog,
  colse: Close,
  construction: Construction,
  contact: Contact,
  event: Event,
  group: Group,
  information: Information,
  menu: Menu,
  video: Video,
};

const { name, size } = Astro.props;
//@ts-ignore
const IconComponent = iconMap[name];
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width={size ? size : "1em"}
  height={size ? size : "1em"}
>
  <IconComponent />
</svg>

<style>
  svg {
    vertical-align: middle;
  }
</style>
