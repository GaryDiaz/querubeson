---
import "../css/colors.css";
import "../css/fonts.css";
import FacebookIcon from "./socialAnimatedIcons/FacebookIcon.astro";
import InstagramIcon from "./socialAnimatedIcons/InstagramIcon.astro";
import YoutubeIcon from "./socialAnimatedIcons/YoutubeIcon.astro";
import TikTokIcon from "./socialAnimatedIcons/TikTokIcon.astro";
import GithubIcon from "./socialAnimatedIcons/GithubIcon.astro";
import YoutubeSubscription from "./YoutubeSubscription.astro";
import FacebookLike from "./FacebookLike.astro";
---

<footer>
  <div id="fb-root"></div>
  <script
    async
    defer
    crossorigin="anonymous"
    src="https://connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v20.0"
    nonce="anpnMFQw"></script>
  <div class="footer-line"></div>
  <div class="footer-wrapper">
    <div class="footer-top">
      <section class="footer-logo">Logo Querube Son</section>
      <section class="footer-subscribe">
        <YoutubeSubscription />
        <FacebookLike />
      </section>
    </div>
    <div class="footer-bottom">
      <small
        >Querube Son © <span> 2024</span>, Todos los derechos reservados</small
      >
      <span class="social-links">
        <a href="https://www.facebook.com/QuerubeSon" title="Facebook">
          <FacebookIcon size="1.5em" />
        </a>
        <a href="https://www.instagram.com/querubeson" title="Instagram">
          <InstagramIcon size="1.5em" />
        </a>
        <a href="https://www.tiktok.com/@querubeson.music" title="TikTok">
          <TikTokIcon size="1.5em" />
        </a>
        <a href="https://www.youtube.com/@querubeson" title="Youtube">
          <YoutubeIcon size="1.5em" />
        </a>
        <a href="https://github.com/GaryDiaz" title="Autor Gary Díaz">
          <GithubIcon size="1.5em" />
        </a>
      </span>
    </div>
  </div>
</footer>

<style>
  footer {
    position: relative;
    bottom: 0;
    background-color: var(--primary-color);
    color: var(--dark-color);
    min-width: 18rem;
    width: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    flex-direction: column;

    & .footer-line {
      display: block;
      width: 100%;
      height: 0.5rem;
      background-image: var(--golden-gradient);
    }

    & .footer-wrapper {
      display: flex;
      background: var(--primary-color);
      flex-direction: column;
      width: 1400px;
      max-width: 1400px;
      padding: 1rem;

      .footer-top {
        display: flex;
        flex-direction: colums;
        flex-wrap: wrap;
        justify-content: start;
        align-items: start;
        flex: 2 0 75px;
        width: 100%;
        gap: 1rem;
        padding: 1.5rem 0.5rem 1rem 0.5rem;
        margin: 0 auto;
        border-top: 1px solid var(--transparent-background-color);

        & section {
          min-width: 9rem;
        }

        .footer-logo {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: start;
          min-width: 12rem;
          gap: 0.5rem;
        }
      }

      .footer-bottom {
        text-align: center;
        border-top: 1px solid var(--text-gray);
        margin-top: 3rem;
        display: flex;
        align-items: center;
        width: 100%;
        gap: 0.5rem;
        padding: 1rem 0px;
        flex-wrap: wrap;
        justify-content: space-between;
        border-top: 1px solid var(--transparent-background-color);

        & small {
          font-size: 1rem;
          margin: 0 0.25rem;
        }

        .social-links {
          display: flex;
          flex-direction: row;
          gap: 0.75rem;

          & a {
            text-decoration: none;
            color: var(--dark-color);

            & svg {
              width: 2em;
              height: 2em;
              transition: all 0.2s ease-in-out;

              &:hover {
                transform: scale(1.2);
              }
            }
          }
        }
      }

      @media (max-width: 1400px) {
        width: 980px;
      }

      @media (max-width: 1200px) {
        width: 850px;
      }

      @media (max-width: 990px) {
        width: 90%;
      }

      @media (max-width: 768px) {
        width: 95%;
      }

      @media (max-width: 576px) {
        width: 100%;
      }
    }
  }
</style>
