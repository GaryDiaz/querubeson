---
import BaseLayout from "@layouts/BaseLayout.astro";
import VideoArticle from "@components/VideoArticle.astro";
import YoutubeSubscription from "@components/YoutubeSubscription.astro";
import { videoList } from "@components/VideoList";
import type { VideoData } from "@components/VideoList";
const pageTitle = "Videos de Youtuve";
const activePage = "videos";
---

<BaseLayout pageTitle={pageTitle} activePage={activePage}>
  <>
    <YoutubeSubscription />
    <section class="video-list">
      {videoList.map((video: VideoData) => <VideoArticle video={video} />)}
    </section>
  </>
</BaseLayout>

<style>
  @import "../css/colors.css";
  @import "../css/fonts.css";

  section.video-list {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    justify-content: center;
    max-width: 75rem;
    gap: 1.5rem;
  }
</style>
