---
import BaseLayout from "./BaseLayout.astro";
//import { Image } from "astro:assets";
//import type {VideoPost} from "../components/Types";
const { frontmatter } = Astro.props;
//const urlImage = frontmatter.image.url;
//@ts-ignore
//import imgYoutubeVideo from frontmatter.image.url;
//import imgYoutubeVideo from "../images/youtube/miviejo.jpg";
---

<BaseLayout pageTitle={frontmatter.title}>
  <p>Escrito por {frontmatter.author}</p>
  <p>Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <p>{frontmatter.description}</p>
  <img
    src={frontmatter.image.url}
    alt={frontmatter.image.alt}
    width={300}
    height="200"
  />
  <div class="tags">
    {
      frontmatter.tags.map((tag: string) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
  <slot />
</BaseLayout>
